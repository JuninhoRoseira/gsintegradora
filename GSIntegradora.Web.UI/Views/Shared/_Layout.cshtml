<!DOCTYPE html>

<html>
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	@Styles.Render("~/Content/Piccasso/css")
	<title>@ViewBag.Title</title>
</head>
<body class="home-page template-home-one-page">

	<div class="container">
		<header id="header">
			<a href="@Url.Action(" index", "Home" )" class="logo">
				<img src="~/Content/images/gsti-logo.jpg" style="margin-top: 10px" alt="logo" />
			</a>
			<a href="javascript:;" class="show-on-phone show-on-tablet" id="phone-toggle-menu"></a>
			<nav>
				<ul id="header-menu" class="hide-on-phone hide-on-tablet">
					<li class="current-menu-item"><a href="#slider">Home</a></li>
					<li><a href="#about">GSTI & GSLOC</a></li>
					<li><a href="#portfolio">Parceiros</a></li>
					<li><a href="#testimonials">Cases</a></li>
					<li><a href="#location">Localização</a></li>
					<li><a href="#contact">Contato</a></li>
					<li>
						<p class="social-icons">
							<a href="javascript:;" class="icon-item show-tooltip" data-gravity="ne" title="Facebook"><i class="fa fa-facebook"></i></a>
							<a href="javascript:;" class="icon-item show-tooltip" data-gravity="ne" title="Pinterest"><i class="fa fa-pinterest"></i></a>
							<a href="javascript:;" class="icon-item show-tooltip" data-gravity="ne" title="LinkedIn"><i class="fa fa-linkedin"></i></a>
							<a href="javascript:;" class="icon-item show-tooltip" data-gravity="ne" title="Twitter"><i class="fa fa-twitter"></i></a>
						</p>
					</li>
				</ul>
			</nav>
		</header>
		<div id="content">
			<section class="slider" id="slider">
				<ul class="sequence-canvas">
					<li class="slide slide-1">
						<h1 class="layer-1" style="font-size: 80px">
							GS TI & GS LOC<br />
							<span style="font-size: 18px">Infraestrutura e Locação de equipamentos</span>
						</h1>
					</li>
					<li class="slide slide-2">
						<h1 class="layer-1" style="font-size:28px">
							A infraestrutura de sua empresa em nossas
							<br /><span style="font-size: 40px">Mãos</span>
						</h1>
					</li>
				</ul>
				<a href="javascript:;" class="sequence-prev"></a>
				<a href="javascript:;" class="sequence-next"></a>
			</section>
			@RenderBody()
		</div>
		<footer id="footer">
			<div class="wrapper centered">
				&copy; GSIntegradora - Todos os direitos reservados.
			</div>
		</footer>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/Piccasso")
	<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&amp;sensor=false"></script>
	<script>

		function googleMapInitialize() {
			var styles = [
  		{
  			"featureType": "water",
  			"stylers": [
      		{ "color": "#ececec" },
      		{ "visibility": "simplified" }
  			]
  		}, {
  			"featureType": "administrative",
  			"elementType": "labels",
  			"stylers": [
      		{ "weight": 0.1 },
      		{ "color": "#262626" },
      		{ "visibility": "on" }
  			]
  		}, {
  			"featureType": "landscape.natural",
  			"elementType": "geometry",
  			"stylers": [
      		{ "color": "#eaeaea" }
  			]
  		}, {
  			"featureType": "landscape.man_made",
  			"stylers": [
      		{ "color": "#e2e2e2" },
      		{ "visibility": "simplified" }
  			]
  		}, {
  			"featureType": "poi",
  			"elementType": "geometry",
  			"stylers": [
      		{ "visibility": "off" }
  			]
  		}, {
  			"featureType": "road.highway",
  			"stylers": [
      		{ "color": "#afafaf" },
      		{ "weight": 2.7 },
      		{ "visibility": "simplified" }
  			]
  		}, {
  			"featureType": "road.arterial",
  			"stylers": [
      		{ "color": "#a0a0a0" },
      		{ "visibility": "simplified" }
  			]
  		}, {
  			"featureType": "road.local",
  			"stylers": [
      		{ "color": "#afafaf" },
      		{ "weight": 0.4 },
      		{ "visibility": "simplified" }
  			]
  		}, {
  			"featureType": "road.local",
  			"elementType": "labels",
  			"stylers": [
      		{ "color": "#afafaf" },
     			{ "weight": 0.1 },
      		{ "visibility": "off" }
  			]
  		}, {
  			"featureType": "transit",
  			"elementType": "geometry",
  			"stylers": [
      		{ "color": "#d9d9d9" },
      		{ "visibility": "on" }
  			]
  		}, {
  			"featureType": "transit",
  			"elementType": "geometry",
  			"stylers": [
      		{ "visibility": "simplified" },
      		{ "weight": 0.1 }
  			]
  		}, {
  			"featureType": "poi",
  			"stylers": [
      		{ "weight": 0.1 },
      		{ "color": "#d9d9d9" },
      		{ "visibility": "simplified" }
  			]
  		}, {
  			"featureType": "road.highway",
  			"elementType": "labels",
  			"stylers": [
      		{ "weight": 0.1 },
      		{ "visibility": "off" }
  			]
  		}
			];


			geocoder = new google.maps.Geocoder();

			var latlong;

			geocoder.geocode({ 'address': 'Centro, Campinas, BRA' }, function (results, status) {
				if (status == google.maps.GeocoderStatus.OK) {
					latlong = results[0].geometry.location;

					var googleMapOptions = {
						zoom: 14,
						center: latlong,
						mapTypeId: google.maps.MapTypeId.ROADMAP,
						styles: styles,
						panControl: false,
						zoomControl: false,
						scrollwheel: false,
						disableDoubleClickZoom: true,
						disableDefaultUI: true,
						draggable: true,
						scaleControl: false
					};

					map = new google.maps.Map(document.getElementById('google-map'), googleMapOptions);

					var marker = new google.maps.Marker({
						position: latlong,
						map: map,
						icon: 'http://html.wplab.pro/picasso/images/pointer.png'
					});

				}
			});
		}

		google.maps.event.addDomListener(window, "load", googleMapInitialize);
	</script>
	@RenderSection("scripts", required: false)
</body>
</html>
